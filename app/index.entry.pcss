.social {
  display: flex;
  align-items: center;

  &__icon {
    margin-right: 24px;
    position: relative;

    @media (--sm) {
      position: static;
    }

    &::before,
    &::after {
      content: "";
      display: block;
      position: absolute;
      left: 0;
      right: 0;
      height: 1px;
      background-color: transparent;
      opacity: 0;
      transition: background-color 0.2s, opacity 0.2s, z-index 0.2s, top 0.2s, bottom 0.2s;
      z-index: -1;

      @media (--sm) {
        display: none;
        transition: none;
      }
    }

    &::before {
      top: 50%;
    }

    &::after {
      bottom: 50%;
    }

    &:hover {
      &::before,
      &::after {
        opacity: 0.7;
        background-color: var(--wt-color-white);
        z-index: 1;
      }

      &::before {
        top: -6px;
      }

      &::after {
        bottom: -6px;
      }
    }

    &:last-child {
      margin-right: 0;
    }

    svg {
      display: block;
    }
  }
}
