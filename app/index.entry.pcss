.checkbox {
  input[type=checkbox] {
    position: absolute;
    clip: rect(0, 0, 0, 0);
    overflow: hidden;
    height: 0;
    width: 0;
  }

  &__input {
    position: relative;
    display: block;
    height: 16px;
    width: 16px;
    box-sizing: border-box;
    border: 1px solid var(--wt-color-dark-40);
    background-color: var(--wt-color-white);

    input:checked + & {
      &::before,
      &::after {
        content: "";
        position: absolute;
        top: 50%;
        height: 2px;
        display: block;
        background-color: var(--wt-color-dark);
      }

      &::before {
        width: 5px;
        transform: rotate(45deg);
        left: 2px;
        margin-top: 1px;
      }

      &::after {
        width: 11px;
        transform: rotate(-45deg);
        left: 4px;
        margin-top: -1px;
      }
    }
  }
}

