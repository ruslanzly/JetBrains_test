:root {
  --wt-color-white: #fff;
  --wt-color-white-60: hsla(0, 0%, 100%, 0.6);
  --wt-color-white-30: hsla(0, 0%, 100%, 0.3);
  --wt-color-white-20: hsla(0, 0%, 100%, 0.2);
  --wt-color-white-10: hsla(0, 0%, 100%, 0.1);
  --wt-color-white-5: hsla(0, 0%, 100%, 0.05);
  --wt-color-dark: #27282c;
  --wt-color-dark-70: rgba(39, 40, 44, 0.7);
  --wt-color-dark-40: rgba(39, 40, 44, 0.4);
  --wt-color-dark-20: rgba(39, 40, 44, 0.2);
  --wt-color-dark-5: rgba(39, 40, 44, 0.05);
  --wt-color-grey: #3c3d40;
  --wt-color-grey-light: #f4f4f4;
  --wt-color-grey-dark: #323236;
  --wt-color-primary-light-theme: #167dff;
  --wt-color-primary-light-theme-80: rgba(22, 125, 255, 0.8);
  --wt-color-primary-light-theme-20: rgba(22, 125, 255, 0.2);
  --wt-color-primary-dark-theme: #4ca6ff;
  --wt-color-primary-dark-theme-80: rgba(76, 166, 255, 0.8);
  --wt-color-primary-dark-theme-20: rgba(76, 166, 255, 0.2);
  --wt-color-error: #ef341e;
  --wt-color-success: #4dbb5f;
  --wt-color-warning: #f3c033;
  --highlight-color: #c8ff00;
  --secondary-highlight-color: #6516b5;
  --dim-color: #696969;
  --gray-color: #afb1b3;
  --color-link: #f76707;
  --color-link-hover: rgba(247, 103, 7, 0.8);
  --border-radius: 25px;
  --logo-size: 72px;
  --logo-top: 120px;
  --logo-left: 140px;
}

@define-mixin fontFamily {
  font-family: system-ui, -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Oxygen, Ubuntu, Cantarell, "Droid Sans", "Helvetica Neue", Arial, sans-serif;
}

.text-1 {
  letter-spacing: normal;
  font-size: 18px;
  font-weight: 400;
  line-height: 28px;
  color: rgba(39, 40, 44, .7);

  &_theme_dark {
    color: hsla(0, 0%, 100%, .6);
  }
}

html,
body {
  min-height: 100vh;
}

body {
  display: block;
  @mixin fontFamily;
  min-width: 300px;
  min-height: 100vh;
  font-size: 15px;
  color: var(--wt-color-dark);
  background-color: #27282c;
}

h1,
h2,
h3 {
  font-weight: bold;
  color: var(--wt-color-dark);
}

h1 {
  font-size: 60px;
  line-height: 1.07;
  letter-spacing: -1.5px;

  @media (--sm) {
    font-size: 42px;
    line-height: 1.14;
    letter-spacing: -1.05px;
  }
}

h2 {
  font-size: 31px;
  line-height: 1.29;
  letter-spacing: -0.5px;

  @media (--sm) {
    font-size: 24px;
    line-height: 1.33;
    letter-spacing: -0.39px;
  }
}

h3 {
  font-size: 20px;
  line-height: 1.4;
}

a {
  color: var(--color-link);
  text-decoration: none;
  transition: color 0.2s;

  &:hover {
    color: var(--color-link-hover);
  }
}

input {
  -webkit-appearance: none;
  border-radius: 0;
  margin: 0;

  &::-ms-clear {
    display: none;
  }
}

input[type=text],
input[type=email] {
  box-sizing: border-box;
  width: 100%;
  padding: 11px 56px 11px 16px;
  border: 1px solid var(--wt-color-dark-20);
  line-height: 1.6;
  @mixin fontFamily;
  font-size: 15px;
  background-color: var(--wt-color-white);
}

label {
  cursor: pointer;
  -webkit-user-select: none;
  -moz-user-select: none;
  -ms-user-select: none;
  user-select: none;
}

@media screen and (-ms-high-contrast: active), (-ms-high-contrast: none) {
  /* для IE11, он не понимает position: sticky */
  body {
    padding-top: 70px;
  }

  .header {
    position: fixed;
  }
}

.theme-light {
  background-color: var(--wt-color-white);
}

.header {
  position: -webkit-sticky;
  position: sticky;
  z-index: 2;
  top: 0;
  left: 0;
  right: 0;
  padding-top: 19px;
  padding-bottom: 19px;
  border-bottom: solid 1px rgba(39, 40, 44, 0.2);
  background: var(--wt-color-white);

  @media (--sm) {
    padding-top: 11px;
    padding-bottom: 11px;
  }
}

.logo {
  color: var(--wt-color-dark);
  font-size: 20px;
  font-weight: bold;
  line-height: 1.4;

  @media (--sm) {
    display: none;
  }

  a {
    color: inherit;
  }
}

.navigation {
  &__list {
    display: flex;
    align-items: center;
    list-style: none;
    padding: 0;
    margin: 0;

    @media (--sm) {
      display: block;
    }
  }

  &__item {
    margin-left: 24px;
    font-size: 15px;
    line-height: 1.6;
    color: var(--wt-color-dark-70);

    @media (--sm) {
      display: none;
    }

    &:first-child {
      margin-left: 0;
    }

    a {
      color: inherit;

      &:hover {
        color: var(--color-link);
      }
    }

    &_active {
      color: var(--color-link);

      @media (--sm) {
        color: var(--wt-color-dark);
        display: block;

        &::after {
          content: "";
          display: inline-block;
          border-width: 8px 7px 0 7px;
          border-style: solid;
          border-color: var(--wt-color-dark) transparent transparent;
          margin-left: 8px;
        }
      }
    }
  }

  &__button {
    display: inline-block;
    padding: 3px 36px;
    border: 1px solid var(--wt-color-dark-40);
    border-radius: var(--border-radius);
    vertical-align: middle;
    transition: border-color 0.2s;

    &:hover {
      border-color: currentColor;
    }
  }
}

.wt-section {
  &_mobile {
    @media (--sm) {
      padding-bottom: 64px;
    }
  }
}

.wt-offset-top-mobile {
  @media (--sm) {
    margin-top: 64px;
  }
}

.wt-row_mobile {
  @media (--sm) {
    display: block;
  }
}

.left-block {
  box-sizing: border-box;
  width: 50%;
  flex-basis: 50%;

  @media (--lg) {
    width: 47%;
    flex-basis: 47%;
  }

  @media (--sm) {
    width: 100%;
    flex-basis: 100%;
  }
}

.right-block {
  width: 50%;
  flex-basis: 50%;

  @media (--lg) {
    width: 47%;
    flex-basis: 47%;
  }

  @media (--sm) {
    width: 100%;
    flex-basis: 100%;
  }
}

.important-information {
  font-size: 28px;
  font-weight: 300;
  line-height: 1.43;

  @media (--sm) {
    font-size: 24px;
    line-height: 1.33;
  }
}

.all-products-image {
  width: 45%;
  flex-basis: 45%;

  @media (--lg) {
    width: 47%;
    flex-basis: 47%;
  }

  @media (--sm-870) {
    width: 40%;
    flex-basis: 40%;
  }

  @media (--sm) {
    width: 100%;
    flex-basis: 100%;
    order: 1;
  }

  img {
    margin: 5px;
    width: 466px;
    max-width: 100%;

    @media (--lg) {
      margin: 5px 0;
      width: 453px;
    }
  }
}

.all-products {
  @media (--sm-870) {
    width: 56%;
    flex-basis: 56%;
  }

  @media (--sm) {
    width: 100%;
    flex-basis: 100%;
    margin-bottom: 64px;
  }

  &__title {
    margin-bottom: 23px;

    @media (--sm) {
      margin-bottom: 16px;
    }
  }

  &__content {
    max-width: 385px;

    @media (--sm-870) {
      max-width: none;
    }
  }

  &__footer {
    margin-top: 48px;

    @media (--lg) {
      margin-top: 24px;
    }

    @media (--sm) {
      margin-top: 16px;
    }
  }

  &__info {
    margin-top: 24px;
    font-size: 15px;
    line-height: 1.6;
    color: var(--wt-color-dark-70);

    @media (--sm) {
      margin-top: 16px;
    }
  }
}

.button {
  box-sizing: border-box;
  display: inline-block;
  padding: 12px 40px;
  border: 1px solid var(--color-link);
  border-radius: var(--border-radius);
  line-height: 1.6;
  font-size: 15px;
  color: var(--wt-color-white);
  background-color: var(--color-link);
  text-decoration: none;
  transition: background-color 0.2s;
  cursor: pointer;

  &:hover,
  &:focus {
    background-color: var(--color-link-hover);
    color: var(--wt-color-white);
  }

  &:active {
    background-color: var(--color-link);
  }

  &_link {
    padding: 12px 48px;
  }
}

.products-section {
  @media (--sm) {
    padding-bottom: 38px;
  }
}

.products-wrapper {
  @media (--sm) {
    display: block;
  }

  &_extensions {
    margin-top: 54px;

    @media (--lg) {
      margin-top: 22px;
    }

    @media (--sm) {
      margin-top: 0;
    }
  }
}

.products-images {
  @media (--sm-870) {
    width: 40%;
    flex-basis: 40%;
  }

  @media (--sm) {
    overflow: hidden;
    clip: rect(0,0,0,0);
    height: 0;
    width: 0;
  }

  &__list {
    display: flex;
    flex-wrap: wrap;
    margin: -24px 0;
  }

  &__item {
    width: 25%;
    margin: 24px 0;
    opacity: 1;
    transition: opacity 0.3s;

    .products-images__list_opacity & {
      opacity: 0.4;

      &_nontransparent {
        opacity: 1;
      }
    }

    @media (--lg) {
      flex-basis: 33.3333333333333%;
    }

    .products-wrapper_extensions & {
      &:nth-child(3n + 3) {
        flex-basis: 50%;

        @media (--lg) {
          flex-basis: 33.3333333333333%;
        }
      }
    }

    .product__name & {
      display: none;
      width: var(--logo-size);
      height: var(--logo-size);

      @media (--sm) {
        display: block;
        max-height: var(--logo-size);
        max-width: var(--logo-size);
        min-width: 48px;
        min-height: 48px;
        height: 13.33333333333333vw;
        width: 13.33333333333333vw;
        margin: 0 0 12px;
      }

      svg {
        max-height: 100%;
        max-width: 100%;
      }
    }
  }
}

.products {
  @media (--sm-870) {
    width: 56%;
    flex-basis: 56%;
  }

  @media (--sm) {
    width: 100%;
    flex-basis: 100%;
  }

  &__title {
    margin-bottom: 24px;
    display: block;

    @media (--sm) {
      display: none;
    }

    .products-wrapper_extensions & {
      margin-top: -96px;
      margin-bottom: 57px;

      @media (--lg) {
        margin-top: -64px;
        margin-bottom: 24px;
      }

      @media (--sm) {
        display: none;
      }
    }

    &_mobile {
      display: none;
      margin-bottom: 16px;

      @media (--sm) {
        display: block;
      }
    }
  }

  &__description {
    max-width: 484px;
    margin-bottom: 53px;
    font-size: 18px;
    line-height: 1.56;
    color: var(--wt-color-dark-70);

    @media (--sm-870) {
      max-width: none;
      width: 100%;
      margin-bottom: 32px;
    }

    @media (--sm) {
      max-width: none;
      width: 100%;
      margin-bottom: 32px;
    }
  }

  &__list {
    display: flex;
    flex-wrap: wrap;
    align-items: flex-start;
    margin: -15px -8px;
  }
}

.product {
  box-sizing: border-box;
  width: 50%;
  flex-basis: 50%;
  max-width: 50%;
  padding: 15px 8px;

  @media (--sm) {
    padding: 11px 8px;
  }

  &__name {
    margin-bottom: 4px;

    @media (--sm) {
      display: flex;
      flex-direction: column;
      align-items: flex-start;
      margin-bottom: 6px;
    }
  }

  &__link {
    color: var(--wt-color-dark);

    @media (--sm) {
      font-size: 15px;
      font-weight: bold;
      line-height: 1.6;
    }

    &:hover {
      color: var(--color-link);
    }
  }
}

.languages {
  display: flex;
  flex-wrap: wrap;
  margin: 0 -6px;
}

.language {
  padding: 4px 20px;
  border-radius: 4px;
  background-color: var(--wt-color-dark-5);
  font-size: 12px;
  line-height: 1.33;
  color: var(--wt-color-dark-70);
  margin: 2px 6px;
}

.advantages-section {
  border-top: 1px solid var(--wt-color-dark-20);
  padding-top: 96px;
  padding-bottom: 84px;

  @media (--sm) {
    padding-top: 64px;
  }
}

.advantages-image {
  width: 40%;
  flex-basis: 40%;

  @media (--lg) {
    width: 45%;
    flex-basis: 45%;
  }

  @media (--sm-870) {
    width: 40%;
    flex-basis: 40%;
  }

  @media (--sm) {
    display: none;
  }

  img {
    max-width: 100%;
    width: 430px;

    @media (--lg) {
      max-width: 411px;
      width: 100%;
    }
  }
}

.advantages {
  @media (--sm-870) {
    width: 56%;
    flex-basis: 56%;
  }

  @media (--sm) {
    width: 100%;
    flex-basis: 100%;
  }
}

.advantage {
  margin-top: 48px;

  @media (--sm) {
    margin-top: 32px;
  }

  &:first-child {
    margin-top: 0;
  }

  &__icon {
    margin-bottom: 14px;

    @media (--sm) {
      margin-bottom: 12px;
    }

    svg {
      display: block;
    }
  }

  &__title {
    font-size: 20px;
    font-weight: bold;
    line-height: 1.4;
  }

  &__content {
    margin-top: 14px;
    font-size: 18px;
    line-height: 1.56;

    @media (--sm) {
      margin-top: 12px;
    }
  }
}

.attention-section {
  background-color: var(--wt-color-dark);
  padding-bottom: 0;

  @media (--sm) {
    padding-bottom: 1px;
  }
}

.attention-image {
  width: 340px;
  flex-basis: 340px;
  text-align: right;
  margin-top: -1px;

  @media (--lg) {
    width: auto;
    -webkit-flex-basis: auto;
    flex-basis: auto;
    flex-grow: 1;
  }

  @media (--sm-870) {
    flex-grow: 0;
    width: 40%;
    flex-basis: 40%;
  }

  @media (--sm) {
    display: none;
  }

  img {
    vertical-align: middle;
  }
}

.attention-info {
  width: auto;
  -webkit-flex-basis: auto;
  flex-basis: auto;
  flex-grow: 1;
  margin: 48px 0 48px 73px;

  @media (--lg) {
    width: 47%;
    flex-basis: 47%;
    flex-grow: 0;
    margin: 96px 0 48px 96px;
    align-self: flex-start;
  }

  @media (--sm-870) {
    width: 56%;
    flex-basis: 56%;
    margin-left: 0;
  }

  @media (--sm) {
    width: 100%;
    flex-basis: 100%;
    margin: 63px 0 63px;
  }

  &__title {
    margin-bottom: 24px;
    letter-spacing: normal;
    color: var(--wt-color-white);
  }

  &__content {
    font-size: 18px;
    line-height: 1.56;
    color: var(--wt-color-white-60);
  }

  &__link {
    margin-top: 12px;
    font-size: 18px;
    line-height: 1.56;

    a {
      opacity: 1;
      transition: opacity 0.2s;

      &:hover {
        opacity: 0.9;
      }
    }
  }
}

.businesses {
  flex-wrap: nowrap;
  align-items: flex-start;

  @media (--sm-870) {
    display: block;
  }

  &__title {
    width: 325px;
    flex-basis: 325px;
    min-width: 325px;
    letter-spacing: normal;

    @media (--lg) {
      width: 296px;
      flex-basis: 296px;
      min-width: 296px;
      flex-shrink: 0;
    }

    @media (--sm-870) {
      width: 100%;
      flex-basis: 100%;
      margin-bottom: 16px;
    }

    @media (--sm) {
      width: 100%;
      flex-basis: 100%;
      margin-bottom: 16px;
    }
  }

  &__main {
    width: 100%;
    -webkit-flex-basis: auto;
    flex-basis: auto;
    flex-grow: 1;
    margin-left: 102px;

    @media (--lg) {
      margin-left: 30px;
    }

    @media (--sm-870) {
      margin-left: 0;
    }

    @media (--sm) {
      margin-left: 0;
    }
  }

  &__list {
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
    align-items: center;
    margin: -17px 0;

    @media (--sm) {
      margin: -6px 0;
    }

    &::before,
    &::after {
      content: "";
      width: 33.3333333333333%;
      height: 0;

      @media (--sm) {
        display: none;
      }
    }

    &::before {
      order: 1;
      width: 100%;
      flex-basis: 100%;
    }

    &::after {
      order: 3;
      width: 100%;
      flex-basis: 100%;
    }
  }
}

.business {
  margin: 17px 0;
  text-align: center;
  width: 22%;
  display: flex;
  flex-direction: column;
  align-items: center;

  @media (--lg) {
    width: 160px;

    svg {
      max-width: 100%;
    }
  }

  @media (--sm) {
    margin: 12px 0;
  }

  &:nth-child(4),
  &:nth-child(5),
  &:nth-child(6) {
    order: 2;

    @media (--sm) {
      order: 0;
    }
  }

  @media (--sm) {
    width: 50%;

    &:nth-child(3) {
      order: 1;
    }

    &:nth-child(6) {
      order: 2;
    }
  }
}

.faq {
  &__title {
    margin-bottom: 24px;

    @media (--sm) {
      margin-bottom: 16px;
    }
  }

  &__item {
    & ~ & {
      @media (--sm) {
        margin-top: 32px;
      }
    }

    &:nth-child(2n+3),
    &:nth-child(2n+4) {
      margin-top: 24px;

      @media (--sm) {
        margin-top: 32px;
      }
    }
  }

  &__question {
    max-width: 490px;
    line-height: normal;
    font-size: 20px;
    font-weight: bold;
    color: var(--wt-color-dark);

    @media (--sm) {
      font-size: 18px;
      line-height: 1.56;
      max-width: 100%;
    }
  }

  &__answer {
    max-width: 490px;
    margin-top: 24px;
    font-size: 18px;
    line-height: 1.56;
    color: var(--wt-color-dark-70);

    @media (--sm) {
      margin-top: 16px;
      max-width: 100%;
      font-size: 15px;
      line-height: 1.6;
    }
  }
}

.productivity-section {
  padding-bottom: 64px;

  @media (--lg) {
    padding-bottom: 96px;
  }

  @media (--sm) {
    padding-bottom: 64px;
  }
}

.productivity-image {
  width: 40%;
  flex-basis: 40%;
  text-align: center;

  @media (--lg) {
    width: 45%;
    flex-basis: 45%;
  }

  @media (--sm-870) {
    display: none;
  }

  @media (--sm) {
    display: none;
  }

  img {
    @media (--lg) {
      max-width: 450px;
      width: 100%;
    }
  }
}

.productivity {
  @media (--sm-870) {
    width: 100%;
    flex-basis: 100%;
  }

  &__title {
    width: 412px;
    max-width: 100%;
    margin-top: 17px;
    margin-bottom: 48px;

    @media (--lg) {
      margin-top: 0;
    }

    @media (--sm-870) {
      width: 100%;
    }

    @media (--sm) {
      width: 100%;
      margin-top: 0;
      margin-bottom: 16px;
      font-weight: normal;
      letter-spacing: normal;
    }
  }

  &__content {
    font-size: 18px;
    line-height: 1.56;
  }
}

.link {
  display: inline-flex;
  align-items: center;

  &_baseline {
    @media (--sm) {
      align-items: baseline;
    }
  }

  &__icon {
    display: inline-block;
    width: 23px;
    margin-right: 16px;
    line-height: 1;
    vertical-align: middle;

    * {
      max-width: 100%;
    }
  }

  &__text {
    border-bottom: 1px solid transparent;
    margin-bottom: -1px;
    vertical-align: middle;
    transition: border-bottom-color 0.2s;

    .link:hover & {
      border-bottom-color: currentColor;
    }
  }
}

.feedback-section {
  background-color: var(--wt-color-grey-light);
}

.feedback {
  width: 384px;
  flex-basis: 384px;

  @media (--md) {
    max-width: 375px;
    width: 100%;
  }

  @media (--sm-870) {
    width: 48%;
    flex-basis: 48%;
    max-width: 100%;
  }

  @media (--sm) {
    width: 100%;
    flex-basis: 100%;
    max-width: 100%;
  }

  &__title {
    margin-bottom: 24px;

    @media (--sm) {
      font-size: 31px;
      line-height: 1.29;
      letter-spacing: 0.5px;
    }
  }

  &__input {
    background-position: right 16px center;
